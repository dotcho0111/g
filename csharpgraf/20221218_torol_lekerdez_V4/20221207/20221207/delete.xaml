<Window x:Class="_20221207.delete"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20221207"
        mc:Ignorable="d"
        Title="Törlés" Height="450" Width="800">
    <Grid Background="#FF17808E">
        <ComboBox x:Name="cb_lista" HorizontalAlignment="Left" Margin="78,57,0,0" VerticalAlignment="Top" Width="165">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="#FFF0F0F0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
        </ComboBox>
        <Button x:Name="btn_torles" Content="Törlés" HorizontalAlignment="Left" Margin="251,43,0,0" VerticalAlignment="Top" Click="btn_delete_Click" Width="80" Height="50" FontSize="16">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Label x:Name="lbl_delete" Content="Törölni kívánt könyvtár:" HorizontalAlignment="Left" Margin="78,26,0,0" VerticalAlignment="Top" Width="165" FontWeight="Bold"/>
    </Grid>
</Window>
